    <data>

        <variable
            name="vm"
            type="com.frangerapp.franger.viewmodel.chat.IncomingListViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.frangerapp.franger.ui.chat.IncomingFragment">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/incomingListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </RelativeLayout>
</layout>